{
	"compilerOptions": {
		"target": "es2021",
		"lib": ["es2021"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["test", "**/__tests__/**", "**/*.test.ts"],
	"include": ["src/**/*.ts"]
}
